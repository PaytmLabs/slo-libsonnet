{
   "alerts": [
      [
         {
            "alert": "ErrorBudgetBurn",
            "expr": "(\n  errors:status_code:promhttp_metric_handler_requests_total:rate1h:sum{namespace=\"default\",job=\"fooapp\"} > (14.4*0.001000)\n  and\n  errors:status_code:promhttp_metric_handler_requests_total:rate5m:sum{namespace=\"default\",job=\"fooapp\"} > (14.4*0.001000)\n)\nor\n(\n  errors:status_code:promhttp_metric_handler_requests_total:rate6h:sum{namespace=\"default\",job=\"fooapp\"} > (6*0.001000)\n  and\n  errors:status_code:promhttp_metric_handler_requests_total:rate30m:sum{namespace=\"default\",job=\"fooapp\"} > (6*0.001000)\n)\n",
            "labels": {
               "job": "fooapp",
               "namespace": "default",
               "severity": "critical",
               "window": "30d"
            }
         }
      ]
   ],
