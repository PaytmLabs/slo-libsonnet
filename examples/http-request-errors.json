{
   "alerts": [
      {
         "expr": "code:promhttp_metric_handler_requests_total:rate:sum{code!~\"2..\"} * 100 / code:promhttp_metric_handler_requests_total:rate:sum > 5",
         "for": "5m",
         "labels": {
            "severity": "warning"
         }
      },
      {
         "expr": "code:promhttp_metric_handler_requests_total:rate:sum{code!~\"2..\"} * 100 / code:promhttp_metric_handler_requests_total:rate:sum > 10",
         "for": "5m",
         "labels": {
            "severity": "critical"
         }
      }
   ],
   "recordingrule": {
      "expr": "sum(rate(promhttp_metric_handler_requests_total{namespace=\"default\",job=\"fooapp\"}[10m])) BY (code)",
      "record": "code:promhttp_metric_handler_requests_total:rate:sum"
   }
}
